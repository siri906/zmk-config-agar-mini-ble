#include "./boards/shields/klink_kbd/common.keymap"
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    combos {
        compatible = "zmk,combos";

        num1 {
            bindings = <&kp N1>;
            key-positions = <0 1>;
        };

        num2 {
            bindings = <&kp N2>;
            key-positions = <3 2>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&gresc            &kp Q      &kp W     &kp E  &kp R  &kp T  &kp Y      &kp U  &kp I      &kp O         &kp P       &kp NON_US_BACKSLASH  &kp BSPC
&mt LEFT_GUI TAB  &kp A      &kp S     &kp D  &kp F  &kp G  &kp H      &kp J  &kp K      &kp L         &kp SEMI    &kp RET
&kp LSHFT         &kp Z      &kp X     &kp C  &kp V  &kp B  &kp N      &kp M  &kp COMMA  &kp DOT       &kp RSHIFT  &mo 3
                  &kp LCTRL  &kp LALT         &mo 1         &kp SPACE                    &kp CAPSLOCK  &mo 2
            >;
        };

        layer1 {
            bindings = <
&kp GRAVE       &kp N1  &kp N2  &kp N3  &kp N4  &kp N5  &kp N6  &kp N7            &kp N8             &kp N9     &kp N0            &kp MINUS  &kp DELETE
&trans          &trans  &trans  &trans  &trans  &trans  &trans  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp EQUAL  &kp SINGLE_QUOTE  &trans
&kp LEFT_SHIFT  &trans  &trans  &trans  &trans  &trans  &trans  &kp COMMA         &kp PERIOD         &kp SLASH  &trans            &trans
                &trans  &trans          &trans          &trans                                       &trans     &trans
